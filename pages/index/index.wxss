/**index.wxss**/

.top-view {
  width: 100%;
  height: 180px;
  background: -moz-linear-gradient(top, #fc7033, #f89f55);
  background: -webkit-linear-gradient(top, #fc7033, #f89f55);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text_title {
  height: 20px;
  color: white;
  font-size: 14px;
}

.text_info {
  color: white;
  font-size: 42px;
  margin-top: 8px;
  font-weight: bold;
}

.center-view-base {
  width: 100%;
  height: 90px;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.center-view {
  width: 50%;
  height: 90px;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20px;
}

.center-view-line {
  width: 1px;
  height: 80%;
  background-color: #eee;
}

.center-view-title {
  height: 20px;
  color: #666;
  font-size: 12px;
}

.center-view-info {
  color: #666;
  font-size: 35px;
  margin-top: 8px;
  font-weight: bold;
}

.from_title_base {
  width: 100%;
  height: 35px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.from_title_image {
  width: 5px;
  height: 5px;
  margin-left: 20px;
  margin-right: 8px;
}

.from_title_text {
  width: 100%;
  height: 15px;
  color: #666;
  font-size: 12px;
}

.enter_title_base {
  width: 100%;
  height: 35px;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 12px;
  background-color: white;
}

.enter_text_info {
  height: 15px;
  color: #666;
  font-size: 16px;
  margin-right: 16px;
  font-weight: bold;
}


page {
  background-color: #eee;
}
